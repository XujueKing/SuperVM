{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Roadmap Script",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/create-roadmap-and-templates.ps1"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Auto Sync Roadmap Progress",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/auto-sync-progress.ps1",
				"-PrivacyPath",
				"${workspaceFolder}/ROADMAP-ZK-Privacy.md",
				"-RoadmapPath",
				"${workspaceFolder}/ROADMAP.md",
				"-Base",
				"9",
				"-Weight",
				"1.0",
				"-CapIncrease",
				"0"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Generate Visuals Assets",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/generate-visuals.ps1"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Generate PPT Deck",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/generate-ppt.ps1"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Generate PPT Deck",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"${workspaceFolder}/scripts/generate-ppt.ps1"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}